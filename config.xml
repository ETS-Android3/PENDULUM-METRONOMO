<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ubyxsoft.pendulum" version="1.0.2" xmlns:android="http://schemas.android.com/apk/res/android" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PENDULUM - METRONOMO</name>
    <description>
        Il metronomo è nato come uno strumento di misura della pulsazione ritmica, 
        pendulum è nato per renderlo facile, divertente e interessante.
    </description>
    <author email="info@vivo-vivendo-musica.com" href="https://vivo-vivendo-musica.com">
       UbyXsofT
    </author>
    <content src="index.html" />
    
        <allow-navigation href="*" />
        <allow-navigation href="*://*/*" />
        <allow-navigation href="file:///*/*" />
        <allow-navigation href="http://*/*" />
        <allow-navigation href="https://*/*" />
        <allow-navigation href="data:*" />

        <allow-intent href="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />

        <access origin="*" />
        <access origin="*://*/*" />
        <access origin="file:///*" />
        <access origin="cdvfile://*" />
        <access origin="content:///*" />

    <preference name="android-targetSdkVersion" value= "30"/>
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,root" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="ffffff" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true"/>
        <preference name="SplashShowOnlyFirstTime" value="true"/>
        <icon density="ldpi" src="www/res/icon/android/ldpi.png"/>
        <icon density="mdpi" src="www/res/icon/android/mdpi.png"/>
        <icon density="hdpi" src="www/res/icon/android/hdpi.png"/>
        <icon density="xhdpi" src="www/res/icon/android/xhdpi.png"/>
        <icon density="xxhdpi" src="www/res/icon/android/xxhdpi.png"/>
        <icon density="xxxhdpi" src="www/res/icon/android/xxxhdpi.png"/>
        <!--  Portrait  res\drawable-port-ldpi\screen.png -->
        <splash density="port-ldpi" src="www/res/screen/android/drawable-port-ldpi/screen.png"/>
        <splash density="port-mdpi" src="www/res/screen/android/drawable-port-mdpi/screen.png"/>
        <splash density="port-hdpi" src="www/res/screen/android/drawable-port-hdpi/screen.png"/>
        <splash density="port-xhdpi" src="www/res/screen/android/drawable-port-xhdpi/screen.png"/>
        <splash density="port-xxhdpi" src="www/res/screen/android/drawable-port-xxhdpi/screen.png"/>
        <splash density="port-xxxhdpi" src="www/res/screen/android/drawable-port-xxxhdpi/screen.png"/>
        <!-- Lint error default screen -->
        <splash density="ldpi" src="www/res/screen/android/drawable-port-ldpi/screen.png"/>
        <splash density="mdpi" src="www/res/screen/android/drawable-port-mdpi/screen.png"/>
        <splash density="hdpi" src="www/res/screen/android/drawable-port-hdpi/screen.png"/>
        <splash density="xhdpi" src="www/res/screen/android/drawable-port-xhdpi/screen.png"/>
        <splash density="xxhdpi" src="www/res/screen/android/drawable-port-xxhdpi/screen.png"/>
        <splash density="xxxhdpi" src="www/res/screen/android/drawable-port-xxxhdpi/screen.png"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
